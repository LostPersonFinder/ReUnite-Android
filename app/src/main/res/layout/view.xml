<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <ScrollView
	    android:id="@+id/scrollView1"
    	android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View persons with"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <View
       	android:id="@+id/view1"
       	android:layout_width="match_parent"
       	android:layout_height="1dp" 
       	android:background="#555555"/>
    <RadioGroup android:id="@+id/radioGroupPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
   	    	android:id="@+id/radioButtonSelPhotoOnly"
        	android:layout_width="fill_parent"
   	    	android:layout_height="wrap_content"
   	    	android:text="photo only" />
   		<RadioButton
   	    	android:id="@+id/radioButtonSelNoPhoto"
        	android:layout_width="fill_parent"
   	    	android:layout_height="wrap_content"
   	    	android:text="no photo" />
    	<RadioButton
        	android:id="@+id/radioButtonSelBoth"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="both - recommended" />
   		</RadioGroup>
    <View
       	android:layout_width="match_parent"
       	android:layout_height="1dp" 
       	android:background="#555555"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Number of records per load"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <View
       	android:layout_width="match_parent"
       	android:layout_height="1dp" 
       	android:background="#555555"/>    
    <RadioGroup android:id="@+id/radioGroupPageSettings"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content">
    	<RadioButton
   	    	android:id="@+id/radioButtonSel5"
        	android:layout_width="fill_parent"
   	    	android:layout_height="wrap_content"
   	    	android:text=" 5 records" />
   		<RadioButton
   	    	android:id="@+id/radioButtonSel10"
        	android:layout_width="fill_parent"
   	    	android:layout_height="wrap_content"
   	    	android:text="10 records" />
    	<RadioButton
        	android:id="@+id/radioButtonSel15"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="15 records" />
    	<RadioButton
        	android:id="@+id/radioButtonSel20"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:text="20 records" />
    		</RadioGroup>


    <View
       	android:layout_width="match_parent"
       	android:layout_height="50dp" />
	</LinearLayout>
	</ScrollView>

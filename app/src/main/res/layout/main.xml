<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".ReUniteActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="@dimen/reunite_button_height"
        android:src="@drawable/nih_nlm" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="2dp"
        android:gravity="center"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/tvWho"
        android:layout_width="match_parent"
        android:layout_height="@dimen/reunite_button_height"
        android:gravity="center"
        android:text="@string/guest" />

    </LinearLayout>

    <Button
        android:id="@+id/buttonLoginLogout"
        android:layout_width="100dp"
        android:layout_height="@dimen/reunite_button_height"
        android:layout_gravity="center_horizontal"
        android:background="@color/com_facebook_blue"
        android:text="login"
        android:textColor="@color/white1" />

</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/you_are_now_a_developer"
        android:id="@+id/textViewYouAreDeveloperNow"
        android:textStyle="italic"
        android:visibility="invisible"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:gravity="bottom"
                    android:src="@drawable/family_retina_s" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="8dp"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#666666" />

                <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!--
        android:theme="@style/MyTheme">
        -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#ffffff" />

                        <!-- line 4 -->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/reunite_button_height"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="@string/web_server"
                                android:textAppearance="@style/TextAppearance.AppCompat" />

                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent"></LinearLayout>

                            <TextView
                                android:id="@+id/textViewWebServer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/unknown"
                                android:textAppearance="@style/TextAppearance.AppCompat" />

                        </LinearLayout>
                        <!-- 4 end -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/background_floating_material_dark" />
                        <!-- line 5 -->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/reunite_button_height"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="@string/server_status"
                                android:textAppearance="@style/TextAppearance.AppCompat" />

                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent"></LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/textViewServerRating"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/reunite_button_height"
                                    android:text="@string/unknown"
                                    android:gravity="center_vertical"
                                    android:textAppearance="@style/TextAppearance.AppCompat" />

                            </LinearLayout>

                            <Button
                                android:id="@+id/buttonCheck"
                                android:layout_width="100dp"
                                android:layout_height="@dimen/reunite_button_height"
                                android:background="@color/com_facebook_blue"
                                android:text="@string/check"
                                android:textColor="@color/white1" />

                        </LinearLayout>
                        <!-- 5 end -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#666666" />
                        <!-- line 6 -->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/reunite_button_height"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="@string/latency"
                                android:textAppearance="@style/TextAppearance.AppCompat" />

                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent"></LinearLayout>

                            <TextView
                                android:id="@+id/textViewServerLatency"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Details"
                                android:textAppearance="@style/TextAppearance.AppCompat" />
                        </LinearLayout>
                        <!-- 6 end -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#666666" />
                        <!-- line 1 -->
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="@dimen/reunite_button_height"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="@string/event"
                                android:textAppearance="@style/TextAppearance.AppCompat" />

                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent"></LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/textViewLatestEventName"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/reunite_button_height"
                                    android:text="Test"
                                    android:gravity="center_vertical"
                                    android:textAppearance="@style/TextAppearance.AppCompat" />

                            </LinearLayout>

                            <Button
                                android:id="@+id/buttonChange"
                                android:layout_width="100dp"
                                android:layout_height="@dimen/reunite_button_height"
                                android:background="@color/com_facebook_blue"
                                android:text="@string/change"
                                android:textColor="@color/white1" />

                        </LinearLayout>
                        <!-- 1 end -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#666666" />
                        <!-- line 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/reunite_button_height"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="@string/date"
                                android:textAppearance="@style/TextAppearance.AppCompat" />

                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent"></LinearLayout>

                            <TextView
                                android:id="@+id/textViewLatestEventStatus"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="date in details"
                                android:textAppearance="@style/TextAppearance.AppCompat" />

                        </LinearLayout>
                        <!-- 2 end -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#666666" />
                        <!-- line 3 -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/reunite_button_height"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:text="@string/event_location"
                                android:textAppearance="@style/TextAppearance.AppCompat" />

                            <LinearLayout
                                android:layout_width="2dp"
                                android:layout_height="match_parent"></LinearLayout>

                            <TextView
                                android:id="@+id/textViewLatestEventDetails"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=""
                                android:textAppearance="@style/TextAppearance.AppCompat" />

                        </LinearLayout>
                        <!-- 3 end -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/background_floating_material_dark" />
                    </LinearLayout>

                </ScrollView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#666666" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:padding="4dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buFindPeople"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reunite_button_height"
            android:layout_gravity="center_horizontal"
            android:text="@string/find"
            android:textColor="@color/white1"
            android:background="@color/com_facebook_blue"/>
        <!--
            android:background="@drawable/find_button" />
        -->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buReportPerson"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reunite_button_height"
            android:layout_gravity="center_horizontal"
            android:text="@string/report"
            android:textColor="@color/white1"
            android:background="@color/com_facebook_blue"/>
            <!--
            android:background="@drawable/report_button" />
            -->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <Button
            android:id="@+id/buOrganize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/reunite_button_height"
            android:layout_gravity="center_horizontal"
            android:text="@string/organize"
            android:textColor="@color/white1"
            android:background="@color/com_facebook_blue"/>
        <!--
            android:background="@drawable/organize_button" />
        -->

    </LinearLayout>

    </LinearLayout>

</LinearLayout>
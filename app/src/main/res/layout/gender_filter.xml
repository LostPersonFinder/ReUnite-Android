<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp" >
    <TextView
        android:id="@+id/tvEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    <View
       	android:id="@+id/view1"
       	android:layout_width="match_parent"
       	android:layout_height="1dp" 
       	android:background="#555555"/>
    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Files to search" /> 
    <ProgressBar
        android:id="@+id/progressBarTotalNumber"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/tvTotalNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="0" 
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <View
       	android:layout_width="match_parent"
       	android:layout_height="1dp" 
       	android:background="#555555"/>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="To speed up your search, please check or uncheck the following items" />
    <CheckBox
        android:id="@+id/checkBoxMale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/male" />
    <CheckBox
        android:id="@+id/checkBoxFemale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Female" />
    <CheckBox
        android:id="@+id/checkBoxComplex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="Complex" />
    <CheckBox
        android:id="@+id/checkBoxUnknown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:paddingBottom="10dp"
        android:text="@string/unknown" />
     <View
       	android:layout_width="match_parent"
       	android:layout_height="1dp" 
       	android:background="#555555"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:text="Narrow down search of files" /> 
    <ProgressBar
        android:id="@+id/progressBarNewTotalNumber"
        android:layout_width="40dp"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/tvNewTotalNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:text="0" 
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <View
       	android:layout_width="match_parent"
       	android:layout_height="1dp" 
       	android:background="#555555"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="fill_horizontal" >
   		<Button
        	android:id="@+id/buNext2"
            android:layout_width="64dp"
            android:layout_height="64dp"
             android:layout_gravity="center|center_horizontal"
            android:paddingBottom="10dp"
            android:background="@drawable/next_button" />
     </LinearLayout>

</LinearLayout>
</ScrollView>

